{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PC Monitor",
  "version": "0.1.0",
  "identifier": "com.pcmonitor.desktop",
  "build": {
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "PC Monitor",
        "width": 800,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"]
  }
}
